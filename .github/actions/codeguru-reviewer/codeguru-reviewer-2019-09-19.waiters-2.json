{
  "version": 2,
  "waiters": {
    "AssociationComplete": {
            "description": "Wait until a repository asssociation is complete.",
            "operation": "DescribeRepositoryAssociation",
            "delay": 10,
            "maxAttempts": 20,
            "acceptors": [
              {
                  "state": "success",
                  "matcher": "path",
                  "argument": "RepositoryAssociation.State",
                  "expected": "Associated"
              },
              {
                  "state": "retry",
                  "matcher": "path",
                  "argument": "RepositoryAssociation.State",
                  "expected": "Associating"
              }
            ]
        },
        "CodeReviewComplete": {
                "description": "Wait until a code review is complete.",
                "operation": "DescribeCodeReview",
                "delay": 10,
                "maxAttempts": 60,
                "acceptors": [
                  {
                      "state": "success",
                      "matcher": "path",
                      "argument": "CodeReview.State",
                      "expected": "Completed"
                  },
                  {
                      "state": "retry",
                      "matcher": "path",
                      "argument": "RepositoryAssociation.State",
                      "expected": "Pending"
                  }
                ]
            }
      }
}
